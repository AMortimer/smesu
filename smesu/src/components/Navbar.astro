---
const navLinks = [
    // {
    //     name: "Home",
    //     url: "/",
    //     style: "transparent",
    // },
    // {
    //     name: "Contact",
    //     url: "/contact",
    //     style: "transparent",
    // },
    {
        name: "About Us",
        url: "/#about-us",
        style: "transparent",
    },
    {
        name: "Join SMESU",
        url: "/registration",
        style: "primary",
    },
];
---

<nav>
    <div class="container nav-container">
        <a 
            href="/" 
            class="logo"
            >
            <img 
                src="/icons/smesu-logo-blue.png" 
                class="desktop" 
                />
        </a>
        <div class="nav-wrapper">
            <button
                class="btn btn--menu"
                id="menu-btn"
                aria-expanded="false"
                aria-label="Open mobile nav"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 24 24"
                    ><path
                        fill="currentColor"
                        d="M4 6h16v2H4zm0 5h16v2H4zm0 5h16v2H4z"></path></svg
                >
            </button>
            <ul 
                class="nav-links" 
                role="navigation"
                >
                {
                    navLinks.map((link) => (
                        <li role="none">
                            <a
                                href={link.url}
                                class={`btn btn--${link.style} nav-link`}
                                >
                                {link.name}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</nav>
<script>
    const navBtn = document.querySelector("#menu-btn");
    navBtn.addEventListener("click", () => {
        navBtn.setAttribute(
            "aria-expanded",
            navBtn.getAttribute("aria-expanded") === "false" ? "true" : "false",
        );
    });
</script>
